/*购物车版块*/
#shopCar h3{
    font-size: 20px;
    font-weight: normal;
    color: #666666;
}

#shopCar table{
    width: 100%;
    border-collapse: collapse;

}

#shopCar table tr{

    border-bottom: 1px solid #ccc;
    text-indent: 20px;
 }

#shopCar table tr:first-child{
    width: 100%;
    border: none;
    height: 60px;
    background-color: #f2f2f2;

}
#shopCar table tr .addNum{
    display: inline-block;
    height: 26px;
    width: 26px;
    line-height: 26px;
    border: 1px solid #ccc;
    text-indent: 10px;
    margin-left: -28px;
}
#shopCar table tr td .Num{
    text-indent: 30px;
   border: none;
   width: 74px;
    height: 26px;
   border: 1px solid #ccc;
}
#shopCar table tr .jianNum{
    display: inline-block;
    height: 26px;
    width: 26px;
    line-height: 26px;
    border: 1px solid #ccc;
    text-indent: 10px;
}
.myCear{
    display: block;
}


#shopCar table tr:last-child{
    width: 100%;
    border: none;
    height: 60px;
    border: 1px solid #ccc;


}
#shopCar table tr:last-child .jies{
    width: 150px;
    line-height: 60px;
    height:60px;
    background: #ff6600;
    text-indent: 40px;
    font-size: 24px;
    color: #fff;
}
.scpic img{

    width: 120px;
    height: 140px;
}
.scpic{
    float: left;
    text-indent: 15px;
    display: inline-block;
    width: 150px;
    height: 150px;
    border: solid 1px #e6e6e6;
    margin: 30px 0;

}
.allX{
    margin-top: 4px;
    margin-left: 20px;
}
.bor{
    width: 100%;
    height: 32px;
}
.borbot{
    height: 18px;
    border-bottom: 6px solid #ccc;
}
.prox{float: left;
    margin: 30px 20px;}
.porword{
    display: inline-block;
    margin-top: 50px;
}
/*猜你喜欢*/
#youlove ul li{
    width: 210px;
    margin-right: 37px;
}
#youlove ul li:last-child{
    margin-right:0px !important;
}

